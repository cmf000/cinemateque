<%= page_title(t('.title'))%>
<div class="my-5">
  <%= button_link 'Adicionar Sessão', new_screening_path %>
</div>
<table id="screenings-table" class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
  <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <th scope="col" class="px-3 py-3">Filme</th>
    <th scope="col" class="px-6 py-3">Cinema</th>
    <th scope="col" class="px-6 py-3">Sala</th>
    <th scope="col" class="px-6 py-3">Dia da Semana</th>
    <th scope="col" class="px-6 py-3">Horário</th>
  </thead>
  <tbody>
    <% @screenings.each do |s| %>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
        <td class="px-3 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
          <%= s.movie.title %>
        </td>
        <td class="px-6 py-4">
          <%= s.room.movie_theater.name  %>
        </td>
        <td class="px-6 py-4">
          <%= s.room.name %>
        </td>
        <td class="px-6 py-4">
          <%= I18n.t("activerecord.enums.weekday.#{s.weekday}") %>
        </td>
        <td class="px-6 py-4">
          <%= s.start_time %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
